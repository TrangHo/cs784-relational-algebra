doctype html
html
  head
    title= full_title(yield(:title))
    = csrf_meta_tags

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
	link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css"
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bnavbar-collapse" aria-expanded="false"
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href:root_path) RALTS
        #bnavbar-collapse.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li(class="#{ active_nav('pages', 'home') }")
              span.sr-only
                = link_to "Home", root_path
            li(class="#{ active_nav('pages', 'home') }")
              = link_to "Home", root_path
			li(class="#{ active_nav('pages', 'documentation')}")
			  = link_to "Documentation", documentation_path
            li(class="#{ active_nav('pages', 'problems') }")
              = link_to "Problems", problems_path
            li(class="#{ active_nav('problems', 'new') }")
              = link_to "Contribute", new_problem_path
            li(class="#{ active_nav('pages', 'about') }")
              = link_to "About", about_path


	.container
	  .row
        - flash.each do |message_type, message|
          div class=("alert alert-#{message_type}") = message
      = yield

    footer
      .text-center
        span Copyright Â© 2017
      = debug(params) if Rails.env.development?
